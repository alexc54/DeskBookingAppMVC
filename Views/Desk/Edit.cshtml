@model DeskBookingApplication.Models.Desk

@{
    ViewData["Title"] = "Edit Desk";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Desk Name</label>
        <input asp-for="Name" value="@Model.Name" class="form-control" readonly/>        
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Description</label>
        <input asp-for="Notes" value="@Model.Notes" class="form-control" placeholder="Add Notes" />
    </div>


    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Manage" class="btn btn-secondary">Cancel</a>
</form>